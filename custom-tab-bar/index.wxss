.tab-bar {
  position: fixed;
  bottom: 0px;
  left: 0px;
  right: 0px;
  width: 100%;
  height: 100rpx;
  background: white;
  display: flex;
  flex-direction: row;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  background-color: #e4e4e4;
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 1px;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-top: 16rpx;
  position: relative;
}

.cover-image {
  width: 56rpx;
  height: 56rpx;
}

.tab-bar-item .cover-view {
  font-size: 20rpx;
}

.centerImage {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 5rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
}
.cart-count{
  position: absolute;
  top: 5rpx;
  right: 40rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: red;
  color: #fff;
  font-size: 14px;
}
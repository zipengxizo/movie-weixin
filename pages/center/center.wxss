.center {
    display: flex;
    flex-direction: column;
    background-color: #eee;
}

.center .login {
    flex: 1;
    background-color: rgb(150, 4, 4);
    display: flex;
    align-items: center;
    flex-direction: row;
}
.center .login .user-btn{
    width: 240rpx;
    color: #666;
    border-radius: 30rpx;
    font-size: 22rpx;
    padding: 10rpx;
    font-weight: normal;
}
.center .login .log-btn {
    border-radius: 32rpx;
    background-color: #eee;
    color: #333;
    font-size: 24rpx;
    padding: 10rpx;
}

.center .userinfo-nickname {
    text-align: center;
    color: #fff;
    padding: 10rpx;
    font-size: 28rpx;
}

.center .login .image {
    border-radius: 50%;
    background-color: #fff;
    height: 60px;
    width: 60px;
    margin: 10px;
}
.center .login .openid{
    font-size: 24rpx;
    color: #fff;
    padding: 10rpx;
}

.center .txt {
    flex: 1;
    font-size: 16px;
    font-weight: bold;
    color: #fff;
    margin-left: 10px;
}

.center .login .nav {
    padding-left: 10rpx;
    font-size: 32rpx;
    color: #fff;
}
.center .login .logout{
    color: #fff;
}

.center .center-item {
    display: flex;
    flex-direction: row;
    border-bottom: 1px solid #eee;
    align-items: center;
    background-color: #fff;
    padding: 8rpx 16rpx;

}

.center .center-item .icon-item {
    font-size: 46rpx;
    color: rgb(9, 151, 28);
}

.center .center-item .order {
    color: rgb(9, 151, 28);
    font-size: 36rpx;
}

.center .text-left {
    font-size: 14px;
    font-weight: bold;
    flex: 1;
    color: #666;
    padding: 12rpx 20rpx;
}

.center .text-right {
    font-size: 12px;
    color: #666;
    display: flex;
}

.center .tab-item-wrap {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
    background-color: #fff;
}

.tab-item-wrap .tab-item {
    display: flex;
    flex: 1;
    flex-direction: column;

    align-items: center;
}

.tab-item-wrap .tab-item .tab-icon {
    font-size: 60rpx;
    color: #666;
}

.tab-item-wrap .tab-item .icon {
    width: 24px;
    height: 24px;
}

.tab-item-wrap .tab-item .tab-text {
    font-size: 14px;
    color: #333;
    flex: 1;
    padding: 6px 0;
}